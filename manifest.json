{
  "manifest_version": 3,
  "name": "FB Share Extension",
  "version": "1.3",
  "description": "Facebook Share Tool Extension with Tutorials and Features",
  "permissions": [
    "cookies",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://vern-rest-api.vercel.app/*"
  ],
  "action": {
    "default_popup": "ss.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
