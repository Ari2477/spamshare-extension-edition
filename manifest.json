{
  "manifest_version": 2,
  "name": "FB Share Booster",
  "version": "1.3",
  "description": "Boost Facebook Shares - Unlimited Sharing Tool",
  
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "https://*.facebook.com/*",
    "https://vern-rest-api.vercel.app/*"
  ],
  
  "browser_action": {
    "default_popup": "features.html",
    "default_title": "FB Share Booster",
    "default_icon": "icon.png"
  },
  
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  
  "content_security_policy": "script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; object-src 'self'"
}
